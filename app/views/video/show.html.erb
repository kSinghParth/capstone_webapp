<div id = "video">
	<%= video_tag "#{@video.location}", controls: true, size: "800x500", skip_pipeline: true %>
</div>
<div id = "video-title">
  <h2><%= "Video title - #{@video.title} (id-#{@video.id})" %></h2>
</div> 

<div id = "upload">
<%= simple_form_for [@video, @video.analyzes.build], url: video_analyze_index_path(@video) do |f| %>
  <%= f.file_field :file_location %>
  <%= f.button :submit %>
<% end %>
</div>